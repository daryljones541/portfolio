@model PersonalPortfolio.Models.RegisterVM
@{
    ViewBag.Title = "Thankyou";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    li#register-page {
        display: inline;
    }
    /* site wide styles */
    body {
        padding-top: 50px;
        padding-bottom: 20px;
    }
    /* Set padding to keep content from hitting the edges */
    .body-content {
        padding-left: 15px;
        padding-right: 15px;
    }
    /* Set width on the form input elements since they're 100% wide by default */
    input,
    select,
    textarea {
        max-width: 280px;
    }
    li#register-page {
        display: none;
    }
</style>
<h2>Check your email</h2>

<p>
    To complete your registration, you will need to verify your email address.
    To do this, click the link in the email that was just sent to you.  It may take a couple
    of minutes for you to receive it.  If you don't see it in your inbox, check
    your spam or junk folder.
</p>
<p>
    If you need the email verification link resent to you, log in on the Portfolio page
    and follow the directions.
</p>
<p>
    @Html.ActionLink("Return to Portfolio", "Index", "Home")
</p>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<script>
    $('.page-links').removeClass('active');
    $('#register-page').addClass('active');
</script>